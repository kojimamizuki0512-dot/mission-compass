{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "site": "missioncompass-3b58e",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=3600" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api2/**",
        "function": {
          "functionId": "api2",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/**",
        "function": {
          "functionId": "api2",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
