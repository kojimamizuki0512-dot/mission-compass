<script>
  document.addEventListener('DOMContentLoaded', function(){
    var rotator = document.getElementById('heroRotator'); if(!rotator) return;
    var slides = rotator.querySelectorAll('.slide');
    var dots = (document.getElementById('heroDots')||{}).children || [];
    var i=0, ms=4500;
    function show(n){
      if(slides[i]) slides[i].classList.remove('on');
      if(dots[i]) dots[i].classList.remove('on');
      i=(n+slides.length)%slides.length;
      if(slides[i]) slides[i].classList.add('on');
      if(dots[i]) dots[i].classList.add('on');
    }
    setInterval(function(){ show(i+1); }, ms);
  });
</script>
