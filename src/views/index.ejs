<% /* レイアウトは server.js の express-ejs-layouts に任せる。ここで layout() は呼ばない。 */ %>

<!-- ヒーロー写真（商用可：Unsplash/Pexels） -->
<style>
  .hero-photos{display:flex;gap:10px;overflow-x:auto;padding:6px 2px 10px;scroll-snap-type:x mandatory}
  .hero-photos::-webkit-scrollbar{height:8px}
  .hero-photos::-webkit-scrollbar-thumb{background:#cbd5e1;border-radius:999px}
  .hero-photos .hp{min-width:85%;scroll-snap-align:center;border-radius:16px;overflow:hidden;border:1px solid var(--bd);background:#fff}
  .hero-photos .hp img{width:100%;height:100%;object-fit:cover;aspect-ratio:16/9}
  @media (min-width:920px){ .hero-photos .hp{min-width:60%} }
</style>
<div class="hero-photos" aria-label="Inspiration photos" tabindex="0">
  <!-- ステージで輝くアーティスト（Unsplash, 商用可） -->
  <figure class="hp">
    <img src="https://images.unsplash.com/photo-1518972559570-7cc1309f3229?auto=format&fit=crop&w=1600&q=80"
         alt="大舞台で輝くアーティスト" width="1600" height="900" />
  </figure>
  <!-- 海外で活躍するビジネスパーソン（Unsplash, 商用可） -->
  <figure class="hp">
    <img src="https://images.unsplash.com/photo-1531297484001-80022131f5a1?auto=format&fit=crop&w=1600&q=80"
         alt="海外を飛び回るビジネスパーソン" width="1600" height="900" />
  </figure>
  <!-- 家族と広い家で暮らす未来（Pexels, 商用可） -->
  <figure class="hp">
    <img src="https://images.pexels.com/photos/1643383/pexels-photo-1643383.jpeg?auto=compress&cs=tinysrgb&w=1600"
         alt="広い家で家族と過ごす幸福な時間" width="1600" height="1067" />
  </figure>
</div>

<section class="hero">
  <h1>なぜ学ぶのか、を決めよう。</h1>
  <p class="lead">
    AIとの対話で、最終目標と道筋を明確化。<strong>Find your WHY.</strong>
  </p>
  <form method="post" action="/start">
    <!-- 親指で押しやすい大きめCTA（インラインで安全に拡大） -->
    <button class="btn cta" type="submit"
      style="padding:16px 22px; font-size:17px; border-radius:14px; box-shadow:0 14px 32px rgba(31,111,235,.22), 0 6px 14px rgba(16,185,129,.14);">
      はじめる（¥100）
      <span style="display:block;font-weight:600;font-size:12px;opacity:.9;line-height:1;margin-top:3px;">Start Session</span>
    </button>
  </form>
  <div class="chips" style="margin-top:12px">
    <span class="chip">安全なStripe決済 / Secure</span>
    <span class="chip">所要10–15分 / 10–15 min</span>
    <span class="chip">保存なし（MVP） / No Save</span>
  </div>
</section>

<section class="features">
  <div class="feature">
    <h3>AI対話で自己発見（Discover）</h3>
    <p>雑念を削ぎ落とし、コアとなる価値観を言語化する。</p>
  </div>
  <div class="feature">
    <h3>あなただけの羅針盤（Your Compass）</h3>
    <p>日々の選択にぶれない“軸”を1文で定義。</p>
  </div>
  <div class="feature">
    <h3>最初の一歩（First Step）</h3>
    <p>今週やることまで落とし込み、すぐ動ける状態へ。</p>
  </div>
</section>
